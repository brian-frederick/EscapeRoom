@model EscapeRoom.Models.ProductModel

@{
    ViewBag.Title = Model.Name;
}
<img src="~/Content/images/tldClock.jpg" />

<div class="row">
    <div class="col-sm-3">
        <h2>@Model.Name</h2>
        <h4>@Model.Date.Value.ToString("ddd, MM/dd")</h4>
        <h4>@Model.Date.Value.ToString("h:mm")</h4>
        <p>@Model.Price.Value.ToString("c")</p>
    </div>
    <div class="col-sm-6">
@using (Html.BeginForm())
{       
        @Html.HiddenFor(m => Model.Name)
        @Html.HiddenFor(m => Model.Date)

    <form class="form-inline">
        <legend>Purchase Tickets Now</legend>
        <label>Login:</label> <br />
        <input type="text" name="login" default="login">
        <label>Password</label> <br />
        <input type="text" name="password" default="password">
        <div class="nav-divider"></div>
        <label>Or purchase as guest...</label> <br />
        <label>How many tickets would you like?</label> <br />
        @Html.TextBoxFor(m => Model.Quantity)
        <br />
        <label>First Name</label> <br />
        <input type="text" name="firstName" default="firstName"> <br />
        <label>Last Name</label> <br />
        <input type="text" name="lastName" default="lastName"><br />

        <button class="btn btn-danger">submit</button>
    </form>
}
    </div>

</div>

