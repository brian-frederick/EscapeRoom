@model EscapeRoom.Models.SessionModel

@{
    ViewBag.Title = "Selection";
    ViewBag.Banner = "../../Content/Images/arcadeBanner.jpg";
    string dateFormat = "MMMM dd, hh:mm tt";

}


<h1>@Model.Title</h1>
<h2>@Model.Start.ToString(dateFormat)</h2>
<p>@string.Format("{0:C}", Model.Price) per participant.</p>
<p>Up to @Model.Inventory ticket(s) available. How many would you like to purchase?</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <label for="OrderQty">Quantity</label> <br />
    @Html.DropDownListFor(m => m.OrderQty, new SelectList(Model.InventoryList), "")

    <Input type="submit"  value="Get Tickets!" class="btn btn-primary" />
}


